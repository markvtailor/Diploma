<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardElevation="1dp"
        app:strokeColor="@color/white"
        app:strokeWidth="0dp"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/ticket_from"
                android:text="Якутск"
                android:fontFamily="@font/lack_regular"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/docks_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Причал 1"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/lack_regular"
                app:layout_constraintTop_toBottomOf="@id/ticket_from"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/ticket_from"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/ticket_to"
                android:text="Нижний - Бестях"
                android:fontFamily="@font/lack_regular"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/arrow"/>

            <TextView
                android:id="@+id/docks_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Причал 1"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/lack_regular"
                app:layout_constraintTop_toBottomOf="@id/ticket_to"
                app:layout_constraintStart_toStartOf="@id/ticket_to"/>


            <TextView
                android:id="@+id/price"
                android:text="4999 P"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/gray_blue"
                android:textStyle="bold"
                android:fontFamily="@font/lack_regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



            <TextView
                android:id="@+id/valid_until"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/docks_from"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Истекает 13.10.2023"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/lack_regular"
                android:layout_marginTop="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>