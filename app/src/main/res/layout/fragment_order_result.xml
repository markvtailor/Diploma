<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:paddingBottom="76dp"
    tools:context=".presentation.fragments.transaction.OrderResultFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_horizontal"
                android:layout_margin="16dp"
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Билет куплен"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/lack_regular"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/results"
                app:layout_constraintTop_toBottomOf="@id/header"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ticket_from"
                        android:text="Якутск"
                        android:fontFamily="@font/lack_regular"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/docks_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Причал 1"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toBottomOf="@id/ticket_from"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_forward"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ticket_from"
                        android:layout_marginStart="20dp" />

                    <TextView
                        android:id="@+id/ticket_to"
                        android:text="Нижний - Бестях"
                        android:fontFamily="@font/lack_regular"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/arrow"/>

                    <TextView
                        android:id="@+id/docks_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Причал 2"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toBottomOf="@id/ticket_to"
                        app:layout_constraintStart_toStartOf="@id/ticket_to"/>


                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/first_divider"
                        android:layout_width="match_parent"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/docks_to"
                        android:layout_height="1dp"/>


                    <TextView
                        android:id="@+id/adults_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 x Взрослые"
                        android:textSize="16sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toBottomOf="@id/first_divider"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/adults_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4000 P"
                        android:textSize="16sp"
                        android:textColor="@color/gray_blue"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toTopOf="@id/adults_result"
                        app:layout_constraintBottom_toBottomOf="@id/adults_result"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/kids_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 х Дети от 5 до 10 лет"
                        android:textSize="16sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toBottomOf="@id/adults_result"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/kids_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4000 P"
                        android:textSize="16sp"
                        android:textColor="@color/gray_blue"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toTopOf="@id/kids_result"
                        app:layout_constraintBottom_toBottomOf="@id/kids_result"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/cars_heavy_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Легковые автомобили 1,5-3,0"
                        android:textSize="16sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toBottomOf="@id/kids_result"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/cars_heavy_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4000 P"
                        android:textSize="16sp"
                        android:textColor="@color/gray_blue"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toTopOf="@id/cars_heavy_result"
                        app:layout_constraintBottom_toBottomOf="@id/cars_heavy_result"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/cars_cargo_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Прицеп"
                        android:textSize="16sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toBottomOf="@id/cars_heavy_result"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/cars_cargo_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4000 P"
                        android:textSize="16sp"
                        android:textColor="@color/gray_blue"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toTopOf="@id/cars_cargo_result"
                        app:layout_constraintBottom_toBottomOf="@id/cars_cargo_result"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/second_divider"
                        android:layout_width="match_parent"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/cars_cargo_result"
                        android:layout_height="1dp"/>


                    <TextView
                        android:id="@+id/total_sum_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Итого"
                        android:textSize="18sp"
                        android:textColor="@color/dark_blue"
                        android:textStyle="bold"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toBottomOf="@id/cars_cargo_result"
                        android:layout_marginTop="18dp"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/total_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4000 P"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_blue"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toTopOf="@id/total_sum_label"
                        app:layout_constraintBottom_toBottomOf="@id/total_sum_label"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/order_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Дата покупки: 11.06.2023 15:14"
                        android:textColor="@color/gray"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toBottomOf="@id/total_sum_label"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="16dp"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <ImageView
                android:id="@+id/qrcode"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:layout_constraintTop_toBottomOf="@id/results"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="24dp"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/go_back_to_main_button"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/qrcode"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="На главную"
                android:fontFamily="@font/lack_regular"
                android:textSize="16sp"
                android:textColor="@color/gray_blue"
                android:textStyle="bold"
                app:strokeColor="@color/gray_blue"
                app:strokeWidth="2dp"
                app:backgroundTint="@color/white"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>