<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:paddingBottom="76dp"
    tools:context=".presentation.fragments.transaction.OrderResultFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_horizontal"
                android:layout_margin="16dp"
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заказ оформлен"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/lack_regular"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_card"
                android:layout_width="match_parent"
                app:cardElevation="1dp"
                app:strokeColor="@color/white"
                app:strokeWidth="0dp"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/image_name_size"
                        android:text="Красивое"
                        android:fontFamily="@font/lack_regular"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/image"
                        app:layout_constraintStart_toStartOf="parent"/>



                    <ImageView
                        android:id="@+id/image"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:scaleType="fitCenter"/>




                    <TextView
                        android:id="@+id/price"
                        android:text="4999 P"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#0f7abd"
                        android:textStyle="bold"
                        android:fontFamily="@font/lack_regular"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="@id/image_name_size"
                        app:layout_constraintBottom_toBottomOf="@id/image_name_size"
                        app:layout_constraintEnd_toEndOf="parent"/>




                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>




            <com.google.android.material.button.MaterialButton
                android:id="@+id/go_back_to_main_button"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/image_card"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="На главную"
                android:fontFamily="@font/lack_regular"
                android:textSize="16sp"
                android:textColor="#0f7abd"
                android:textStyle="bold"
                app:strokeColor="#0f7abd"
                app:strokeWidth="2dp"
                app:backgroundTint="@color/white"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>