<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray"
    android:paddingBottom="66dp"
    tools:context=".presentation.fragments.transaction.OrderFormFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Покупка билета"
                android:textColor="@color/dark_blue"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/lack_regular"
                android:gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/back_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="24dp"
                android:layout_marginStart="16dp"
                app:backgroundTint="@color/light_gray"
                android:background="@color/light_gray"
                app:srcCompat="@drawable/ic_arrow_back"
                android:tint="@color/black"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/order_info"
                app:layout_constraintTop_toBottomOf="@id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginStart="16dp"
                    android:id="@+id/destination_image"
                    android:src="@drawable/ic_from"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/text_from"
                    app:layout_constraintBottom_toBottomOf="@id/text_from"
                    app:layout_constraintEnd_toStartOf="@id/text_from"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <ImageView
                    android:layout_marginStart="16dp"
                    android:id="@+id/destination_image_two"
                    android:src="@drawable/ic_to"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/text_to"
                    app:layout_constraintBottom_toBottomOf="@id/text_to"
                    app:layout_constraintEnd_toStartOf="@id/text_to"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:layout_marginTop="8dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeColor="@color/white"
                    app:layout_constraintStart_toEndOf="@id/destination_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:hint="Откуда">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="абвгдеёжзийклмнопрстуфхцчшщъыьэюяАБВГДЕЁЖЗИЙКЛМНОПРСТУФХЦЧШЩЪЫЬЭЮЯ"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/lack_regular"
                        />


                </com.google.android.material.textfield.TextInputLayout>




                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeColor="@color/white"
                    app:layout_constraintStart_toEndOf="@id/destination_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_from"
                    android:hint="Куда">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/lack_regular"
                        />


                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/info_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:strokeWidth="0dp"
                    app:layout_constraintTop_toBottomOf="@id/text_to">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        app:layout_constraintTop_toBottomOf="@id/text_to"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#dfedee"
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:rotation="180"
                            android:src="@drawable/ic_info"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Срок действия билета 7 дней с момента покупки"
                            android:textColor="@color/gray_blue"
                            android:textSize="12sp"
                            android:fontFamily="@font/lack_regular"
                            android:gravity="center_horizontal|center_vertical"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/order_info">

                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toBottomOf="@id/text_to"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/payment_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/mastercard"/>
                    <TextView
                        android:id="@+id/payment_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MasterCard * 1234"
                        android:textColor="@color/dark_blue"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/lack_regular"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/payment_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:id="@+id/payment_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_back"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:tint="@color/gray" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_margin="16dp"
                android:id="@+id/order_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/payment">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="8dp"
                        android:id="@+id/passengers_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Пассажиры"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/passengers_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toTopOf="@id/passengers_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/passengers_label"
                        android:checked="true" />

                    <TextView
                        android:id="@+id/adults_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Взрослые"
                        android:textSize="14sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/lack_regular"
                        android:layout_marginTop="36dp"
                        app:layout_constraintTop_toBottomOf="@id/passengers_label"
                        app:layout_constraintStart_toStartOf="parent"/>


                    <ImageView
                        android:id="@+id/add_adult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_plus"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/adults_label"
                        app:layout_constraintBottom_toBottomOf="@id/adults_label"/>

                    <TextView
                        android:id="@+id/adult_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintEnd_toStartOf="@id/add_adult"
                        app:layout_constraintTop_toTopOf="@id/adults_label"
                        app:layout_constraintBottom_toBottomOf="@id/add_adult"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"/>

                    <ImageView
                        android:id="@+id/remove_adult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_minus"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintEnd_toStartOf="@id/adult_count"
                        app:layout_constraintTop_toTopOf="@id/adults_label"
                        app:layout_constraintBottom_toBottomOf="@id/adults_label"/>


                    <TextView
                        android:id="@+id/kids_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Дети от 5 до 10 лет"
                        android:textSize="14sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/lack_regular"
                        android:layout_marginTop="36dp"
                        app:layout_constraintTop_toBottomOf="@id/adults_label"
                        app:layout_constraintStart_toStartOf="parent"/>


                    <ImageView
                        android:id="@+id/add_kid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_plus"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/kids_label"
                        app:layout_constraintBottom_toBottomOf="@id/kids_label"/>

                    <TextView
                        android:id="@+id/kid_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintEnd_toStartOf="@id/add_kid"
                        app:layout_constraintTop_toTopOf="@id/kids_label"
                        app:layout_constraintBottom_toBottomOf="@id/add_kid"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"/>

                    <ImageView
                        android:id="@+id/remove_kid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_minus"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintEnd_toStartOf="@id/kid_count"
                        app:layout_constraintTop_toTopOf="@id/kids_label"
                        app:layout_constraintBottom_toBottomOf="@id/kids_label"/>



                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@id/kids_label"
                        android:layout_marginTop="16dp"/>


                    <TextView
                        android:layout_marginTop="16dp"
                        android:id="@+id/cars_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Легковые автомобили"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toBottomOf="@id/divider"
                        />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/cars_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toTopOf="@id/cars_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/cars_label"
                        android:checked="true" />


                    <TextView
                        android:id="@+id/car_heavy_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Свыше 3,5 т"
                        android:textSize="14sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/lack_regular"
                        android:layout_marginTop="36dp"
                        app:layout_constraintTop_toBottomOf="@id/cars_label"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/car_heavy_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/car_heavy_label"
                        app:layout_constraintBottom_toBottomOf="@id/car_heavy_label"/>


                    <TextView
                        android:id="@+id/car_cargo_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Прицеп"
                        android:textSize="14sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/lack_regular"
                        android:layout_marginTop="36dp"
                        app:layout_constraintTop_toBottomOf="@id/car_heavy_label"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/car_cargo_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/car_cargo_label"
                        app:layout_constraintBottom_toBottomOf="@id/car_cargo_label"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Итого"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/lack_regular"
                app:layout_constraintTop_toBottomOf="@id/order_details"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/order_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 P"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/gray_blue"
                android:fontFamily="@font/lack_regular"
                app:layout_constraintTop_toBottomOf="@id/order_details"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirmation_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/lack_regular"
                android:text="Далее"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/order_sum"
                tools:layout_editor_absoluteX="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>