<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray"
    android:paddingBottom="66dp"
    tools:context=".presentation.fragments.transaction.OrderFormFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/back_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="24dp"
                android:layout_marginStart="16dp"
                app:backgroundTint="@color/light_gray"
                android:background="@color/light_gray"
                app:srcCompat="@drawable/ic_arrow_back"
                android:tint="@color/black"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_card"
                android:layout_width="match_parent"
                app:cardElevation="1dp"
                app:strokeColor="@color/white"
                app:strokeWidth="0dp"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/image_name"
                        android:text="Красивое"
                        android:fontFamily="@font/lack_regular"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/image_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="НейроПикассо"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/lack_regular"
                        app:layout_constraintTop_toBottomOf="@id/image_name"
                        app:layout_constraintStart_toStartOf="parent"/>



                    <ImageView
                        android:id="@+id/image"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_author"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:scaleType="fitCenter"/>



                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggleButton"
                        app:layout_constraintTop_toBottomOf="@id/image"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="16dp"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        app:checkedButton="@id/button_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            style="?attr/materialButtonOutlinedStyle"
                            android:id="@+id/button_small"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Малое"
                            />
                        <Button
                            style="?attr/materialButtonOutlinedStyle"
                            android:id="@+id/button_average"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Среднее"
                            />
                        <Button
                            style="?attr/materialButtonOutlinedStyle"
                            android:id="@+id/button_large"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Большое"
                            />
                    </com.google.android.material.button.MaterialButtonToggleGroup>






                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>




            <com.google.android.material.card.MaterialCardView
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/image_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toBottomOf="@id/image_card"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/payment_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/mastercard"/>
                    <TextView
                        android:id="@+id/payment_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MasterCard * 1234"
                        android:textColor="@color/dark_blue"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/lack_regular"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/payment_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:id="@+id/payment_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_back"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:tint="@color/gray" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/preview_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@id/payment"
                app:layout_constraintBottom_toTopOf="@id/order_sum"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_camera"
                app:fabSize="normal"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/sum_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Итого"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/lack_regular"
                app:layout_constraintTop_toBottomOf="@id/preview_button"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/order_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 P"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0f7abd"
                android:fontFamily="@font/lack_regular"
                app:layout_constraintTop_toTopOf="@id/sum_label"
                app:layout_constraintBottom_toBottomOf="@id/sum_label"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirmation_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/lack_regular"
                android:text="Далее"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/order_sum"
                tools:layout_editor_absoluteX="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>