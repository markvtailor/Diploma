<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardElevation="1dp"
        app:strokeColor="@color/white"
        app:strokeWidth="0dp"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/image_name"
                android:text="Красивое"
                android:fontFamily="@font/lack_regular"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/image_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="НейроПикассо"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/lack_regular"
                app:layout_constraintTop_toBottomOf="@id/image_name"
                app:layout_constraintStart_toStartOf="parent"/>



            <ImageView
                android:id="@+id/image"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_author"
                app:layout_constraintBottom_toTopOf="@id/price"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:scaleType="fitCenter"/>





            <com.google.android.material.button.MaterialButton
                android:id="@+id/proceed_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="К оформлению"
                app:layout_constraintTop_toBottomOf="@id/price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                android:id="@+id/price"
                android:text="4999 P"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#0f7abd"
                android:textStyle="bold"
                android:fontFamily="@font/lack_regular"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/image"
                app:layout_constraintEnd_toEndOf="parent"/>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>